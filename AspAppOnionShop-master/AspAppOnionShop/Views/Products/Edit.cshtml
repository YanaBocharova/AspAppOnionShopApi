@using AspAppOnionShop.Models.Products
@model ProductViewModel

<form method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="last-name-input">Product name</label>
        <input type="text" value="@Model.Name" name="name" class="form-control" id="last-name-input">
    </div>
    <div class="form-group">
        <label for="last-name-input">Product price</label>
        <input type="text" value="@Model.Price" name="price" class="form-control" id="last-name-input">
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.Category" name="price" class="form-control" id="last-name-input">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
