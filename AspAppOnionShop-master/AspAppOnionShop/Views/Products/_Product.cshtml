@using AspAppOnionShop.Models.Products
@model ProductViewModel

<div class="card" style="width: 18rem;">
    <img src="https://img.icons8.com/plasticine/2x/person-male.png" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name </h5>
        <div class="card-text">
            <p>Price: @Model.Price</p>
            <p>Category: @Model.Category.Name</p>
        </div>
    </div>
</div>