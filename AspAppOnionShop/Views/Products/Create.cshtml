<h1>Product Create</h1>

<form method="post">
    <div class="form-group">
        <label for="first-name-input">Name</label>
        <input type="text" name="name" class="form-control" id="first-name-input" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <label for="last-name-input">Price</label>
        <input type="number" name="price" class="form-control" id="last-name-input" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <label for="birth-input">Category</label>
        <input type="text" name="Category" class="form-control" id="birth-input" aria-describedby="emailHelp">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
